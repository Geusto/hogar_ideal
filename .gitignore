# ========================================
# DEPENDENCIAS Y AUTOLOADER
# ========================================

# Composer dependencies
/vendor/
composer.phar

# ========================================
# ARCHIVOS DE CONFIGURACIÓN SENSIBLES
# ========================================

# Configuración de base de datos (puede contener credenciales)
config/database.php

# Archivos de configuración local
.env
.env.local
.env.production
.env.staging

# Configuración de IDE
.vscode/
.idea/
*.sublime-project
*.sublime-workspace

